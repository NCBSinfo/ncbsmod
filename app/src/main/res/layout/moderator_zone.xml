<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.secretbiology.ncbsmod.activity.ModeratorZone">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/mod_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/mod_email"
        android:layout_below="@+id/mod_name"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Allowed Topics"
        android:id="@+id/textView3"
        android:layout_below="@+id/mod_email"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp"
        android:textAlignment="center"
        android:textSize="15sp" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:id="@+id/moderator_recyclerView"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="10sp"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="10sp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="User List"
        android:id="@+id/mod_userlist"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/moderator_recyclerView"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Send indivisual messages"
        android:id="@+id/textView4"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_above="@+id/mod_userlist"
        android:layout_alignStart="@+id/mod_userlist"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="10sp" />
</RelativeLayout>
